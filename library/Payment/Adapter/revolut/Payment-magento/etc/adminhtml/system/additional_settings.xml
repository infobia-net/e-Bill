<?xml version="1.0"?>

<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="additional_settings" translate="label comment" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Additional Settings</label>
        <field id="allowspecific" translate="label" type="allowspecific" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Payment from Applicable Countries</label>
            <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
            <config_path>payment/revolut_card/allowspecific</config_path>
        </field>
        <field id="enable_reward_banner" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enable Reward Banner</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/revolut_card/enable_reward_banner</config_path>
        </field>
        <field id="specificcountry" translate="label" type="multiselect" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Payment from Specific Countries</label>
            <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
            <config_path>payment/revolut_card/specificcountry</config_path>
        </field>
        <field id="sort_order_revolut_pay" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Sort Order: Revolut Pay</label>
            <validate>validate-number</validate>
            <config_path>payment/revolut_pay/sort_order</config_path>
        </field>
         <field id="sort_order_revolut_card" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Sort Order: Revolut Card</label>
            <validate>validate-number</validate>
            <config_path>payment/revolut_card/sort_order</config_path>
        </field>
        <field id="sort_order_revolut_payment_request" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Sort Order: Revolut Payment Request</label>
            <validate>validate-number</validate>
            <config_path>payment/revolut_payment_request/sort_order</config_path>
        </field>
        <field id="support_download_log_file" translate="label" type="button" sortOrder="121" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Do you need technical support?</label>
            <frontend_model>Revolut\Payment\Block\System\Config\DownloadLogFile</frontend_model>
        </field>
    </group>
</include>
