<?xml version="1.0"?>

<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="revolut_pay" translate="label comment" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Revolut Pay</label>
        <field id="revolut_pay_active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enable</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/revolut_pay/active</config_path>
        </field>
        <field id="enable_rewards_label" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enable Rewards label</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/revolut_pay/enable_cashback_text</config_path>
        </field>
        <field id="revolut_pay_button_locations" translate="label" type="multiselect" sortOrder="81" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Locations</label>
            <can_be_empty>1</can_be_empty>
            <source_model>Revolut\Payment\Model\Source\PaymentRequestButton\Locations</source_model>
            <config_path>payment/revolut_pay/locations</config_path>
            <comment>Select where you would like Revolut Pay button to be displayed.</comment>
        </field>
    </group>
</include>
