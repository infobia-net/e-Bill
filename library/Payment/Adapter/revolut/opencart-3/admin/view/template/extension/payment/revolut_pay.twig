{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button
          type="submit"
          form="form-revolut"
          data-toggle="tooltip"
          title="{{ button_save }}"
          class="btn btn-primary"
        >
          <i class="fa fa-save"></i>
        </button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"
          ><i class="fa fa-reply"></i
        ></a>
      </div>
      <h1>{{ heading_title_pay }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li>
          <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_api_key_config %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_api_key_config }}</div>
    {% endif %} {% if success %}
    <div class="alert alert-success">
      <i class="fa fa-exclamation-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit_pay }}</h3>
      </div>
      <div class="panel-body">
        <form
          action="{{ action }}"
          method="post"
          enctype="multipart/form-data"
          id="form-revolut"
          class="form-horizontal"
        >
          <ul class="nav nav-tabs">
            <li class="active">
              <a href="#tab-general" data-toggle="tab">{{ tab_general }}</a>
            </li>
            <li>
              <a href="#tab-additional-settings" data-toggle="tab">{{ tab_addional_settings }}</a>
            </li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_revolut_pay_status" id="input-status" class="form-control">
                    {% if payment_revolut_pay_status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
            </div>

            <div class="tab-pane" id="tab-additional-settings">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-total"
                  ><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label
                >
                <div class="col-sm-10">
                  <input
                    type="text"
                    name="payment_revolut_pay_total"
                    value="{{ payment_revolut_pay_total }}"
                    placeholder="{{ entry_total }}"
                    id="input-total"
                    class="form-control"
                  />
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                  <input
                    type="text"
                    name="payment_revolut_pay_sort_order"
                    value="{{ payment_revolut_pay_sort_order }}"
                    placeholder="{{ entry_sort_order }}"
                    id="input-sort-order"
                    class="form-control"
                  />
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                <div class="col-sm-10">
                  <select name="payment_revolut_pay_geo_zone_id" id="input-geo-zone" class="form-control">
                    <option value="0">{{ text_all_zones }}</option>
                    {% for geo_zone in geo_zones %} {% if geo_zone.geo_zone_id == payment_revolut_pay_geo_zone_id %}
                    <option value="{{ geo_zone.geo_zone_id }}" selected="selected">
                      {{ geo_zone.name }}
                    </option>
                    {% else %}
                    <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                    {% endif %} {% endfor %}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="payment_revolut_pay_theme">Button Theme</label>
                <div class="col-sm-10">
                  <select name="payment_revolut_pay_theme" id="payment_revolut_pay_theme" class="form-control">
                    <option value="dark">Dark</option>
                    <option value="light">Light</option>
                    <option value="light-outlined">Light Outlined</option>
                  </select>
                </div>
              </div>
              
              <div class="form-group">
                <label class="col-sm-2 control-label" for="payment_revolut_pay_radius">Button Radius</label>
                <div class="col-sm-10">
                  <select name="payment_revolut_pay_radius" id="payment_revolut_pay_radius" class="form-control">
                    <option value="none">None</option>
                    <option value="small">Small</option>
                    <option value="large">Large</option>
                  </select>
                </div>
              </div>
              
              <div class="form-group">
                <label class="col-sm-2 control-label" for="payment_revolut_pay_size">Button Size</label>
                <div class="col-sm-10">
                  <select name="payment_revolut_pay_size" id="payment_revolut_pay_size" class="form-control">
                    <option value="large">Large</option>
                    <option value="small">Small</option>
                  </select>
                </div>
              </div>

            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  var customise_select = $("select[name='payment_revolut_customise']");

  customise_select.on("change", function () {
    if (customise_select.val() == 1) {
      $("#input-background-colour").parent().parent().parent().show();
      $("#input-font-colour").parent().parent().parent().show();
      $("#input-logo-theme").parent().parent().show();
      $("#button-reset").parent().parent().show();
    } else {
      $("#input-background-colour").parent().parent().parent().hide();
      $("#input-font-colour").parent().parent().parent().hide();
      $("#input-logo-theme").parent().parent().hide();
      $("#button-reset").parent().parent().hide();
    }
  });

  function resetCustomisations() {
    $("#input-background-colour").colorpicker("setValue", "#ffffff");
    $("#input-font-colour").colorpicker("setValue", "#848484");
    $("#input-logo-theme").val("#7a7a7a");
  }

  $(document).ready(function () {
    $("#input-background-colour").colorpicker({
      align: "left",
      customClass: "colorpicker-2x",
      sliders: {
        saturation: {
          maxLeft: 200,
          maxTop: 200,
        },
        hue: {
          maxTop: 200,
        },
        alpha: {
          maxTop: 200,
        },
      },
    });

    $("#input-font-colour").colorpicker({
      align: "left",
      customClass: "colorpicker-2x",
      sliders: {
        saturation: {
          maxLeft: 200,
          maxTop: 200,
        },
        hue: {
          maxTop: 200,
        },
        alpha: {
          maxTop: 200,
        },
      },
    });

    $("#input-background-colour").on("changeColor", function (event) {
      $("#input-background-colour-swatch > i").css("background-color", event.color.toString());
    });

    $("#input-font-colour").on("changeColor", function (event) {
      $("#input-font-colour-swatch > i").css("background-color", event.color.toString());
    });
  });
</script>
{{ footer }}
