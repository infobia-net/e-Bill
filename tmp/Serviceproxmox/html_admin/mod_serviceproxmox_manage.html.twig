{% import 'macro_functions.html.twig' as mf %}

{% set server = admin.serviceproxmox_server_get_from_order({"order_id":order.id}) %}

<div class="card-body">
    <h2>{{ 'Details'|trans }}</h2>
</div>
<table class="table card-table table-vcenter table-striped text-nowrap">
    <tbody>
        <tr class="noborder">
            <td class="w-50 text-end">{{ 'Status'|trans }}:</td>
            <td>{{mf.status_name(order.status)}}</td>
        </tr>

        <tr>
            <td>{{ 'Server Name'|trans }}:</td>
            <td><a href="{{ 'serviceproxmox/server'|alink }}/{{ server.id }}">{{ server.name }}</a></td>
        </tr>
		<tr>
            <td class="text-end">{{ 'Server Group'|trans }}:</td>
            <td><a href="{{ 'serviceproxmox/server'|alink }}/{{ server.id }}">{{ server.group }}</a></td>
        </tr>
        <tr>
            <td class="text-end">{{ 'Server IPv4'|trans }}:</td>
            <td>{{ server.ipv4 }}</td>
        </tr>
		<tr>
            <td class="text-end">{{ 'Server IPv6'|trans }}:</td>
            <td>{{ server.ipv6 }}</td>
        </tr>
		<tr>
            <td class="text-end">{{ 'Server Hostname'|trans }}:</td>
            <td>{{ server.hostname }}</td>
        </tr>
		<tr>
            <td class="text-end">{{ 'Server Capacity'|trans }}:</td>
            <td>{{ server.used_slots }}/{{ server.slots }}</td>
        </tr>
		<tr>
            <td class="text-end">{{ 'Server root user'|trans }}:</td>
            <td>{{ server.root_user }}</td>
        </tr>
		<tr>
            <td class="text-end">{{ 'Server root password'|trans }:</td>
            <td>{{ server.root_password }}</td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2">
                <div class="aligncenter">
                    {{ order_actions }}
                    <a class="btn55 mr10" href="https://{{ server.access }}:8006" target="_blank"><img src="images/icons/middlenav/linux.png" alt=""><span>{{ 'Jump to Proxmox admin panel'|trans }}</span></a>

                    <a href="{{ 'api/admin/serviceproxmox/sync'|link({'order_id' : order.id }) }}" data-api-confirm="Are you sure?" data-api-msg="Account was synced" class="btn55 mr10 api-link"><img src="images/icons/middlenav/transfer.png" alt=""><span>Sync with server</span></a>
                </div>
            </td>
        </tr>
    </tfoot>
</table>

<div class="help">
    <h2>{{ 'Change account password'|trans }}</h2>
</div>

<form action="{{ 'api/admin/serviceproxmox/change_password'|link }}" method="post" class="mainForm api-form save" data-api-msg="{{ 'Account password changed'|trans }}">
<fieldset>
    <div class="rowElem noborder">
        <label>{{ 'Password'|trans }}:</label>
        <div class="formRight">
            <input type="password" name="password" required="required"/>
        </div>
        <div class="fix"></div>
    </div>
    <div class="rowElem">
        <label>{{ 'Password Confirm'|trans }}:</label>
        <div class="formRight">
            <input type="password" name="password_confirm"  required="required"/>
        </div>
        <div class="fix"></div>
    </div>

    <input type="hidden" name="order_id" value="{{ order.id }}">
    <input type="submit" value="{{ 'Change'|trans }}" class="greyishBtn submitForm" />
</fieldset>
</form>
